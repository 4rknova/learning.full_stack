# GraphQL schema example
# https://gqlgen.com/getting-started/

type Task {
  id: ID!
  text: String!
  isDone: Boolean!
  user: User!
}

type User {
  id: ID!
  name: String!
}

type Result {
  isSuccessful: Boolean!
}

input NewTask {
  text: String!
  userId: String!
}

input UpdatedTask {
  id: String!
  isDone: Boolean!
}

type Query {
  tasks: [Task!]!
}

type Mutation {
  createTask(input: NewTask!): Task!
  updateTask(input: UpdatedTask!): Result!
  deleteTask(input: ID!): Result!
}
